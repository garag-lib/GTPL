{
  "name": "gtpl",
  "version": "1.1.1",
  "type": "module",
  "repository": "https://github.com/garag-lib/GTPL",
  "description": "GTPL is a TypeScript library for reactive template systems built around Direct DOM and Proxy, inspired by Vue, Angular AOT, and JSX, delivering efficient reactive UI updates in a compact 11kB JavaScript package.",
  "main": "./dist/gtpl.cjs.js",
  "module": "./dist/gtpl.esm.js",
  "types": "./dist/gtpl.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/gtpl.esm.js",
      "require": "./dist/gtpl.cjs.js",
      "types": "./dist/gtpl.d.ts"
    }
  },
  "files": [
    "dist",
    "NOTICE",
    "CITATION.cff"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "test": "TS_NODE_PROJECT=tsconfig-rollup.json node --loader ts-node/esm --experimental-specifier-resolution=node --test tests/*.test.ts"
  },
  "author": "Manuel Peliz",
  "license": "Apache-2.0",
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  }
}
